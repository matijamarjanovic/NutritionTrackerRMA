    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.view.fragments.PlanFragment">

    <LinearLayout
        android:id="@+id/monLay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="32dp"
        app:layout_constraintTop_toBottomOf="@id/daysRg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnsLay"
        >

        <TextView
            android:id="@+id/monTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="8dp"

            android:text="@string/monday"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="36dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/monB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/breakf"
            />
        <Spinner
            android:id="@+id/monSpinnerB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/mealNameTextView"
            android:layout_marginTop="8dp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/monL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lun"
            />
        <Spinner
            android:id="@+id/monSpinnerL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/mealNameTextView"
            android:layout_marginTop="8dp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/monD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/din"
            />
        <Spinner
            android:id="@+id/monSpinnerD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/mealNameTextView"
            android:layout_marginTop="8dp"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tueLay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="32dp"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@id/daysRg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnsLay"
