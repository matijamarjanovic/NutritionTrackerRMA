            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/friD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/din"
            />
        <Spinner
            android:id="@+id/friSpinnerD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/satLay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="32dp"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@id/daysRg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnsLay"

        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/satTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="8dp"

            android:text="@string/saturday"
android:textSize="36dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/satB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/breakf"
            />
        <Spinner
            android:id="@+id/satSpinnerB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/satL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lun"
            />
        <Spinner
            android:id="@+id/satSpinnerL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/satD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/din"
            />
        <Spinner
            android:id="@+id/satSpinnerD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/sunLay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="32dp"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@id/daysRg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnsLay"

        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/sunTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="8dp"
            android:text="@string/sunday"
            android:textSize="36dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/sunB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/breakf"
            />
        <Spinner
            android:id="@+id/sunSpinnerB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/sunL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lun"
            />
        <Spinner
            android:id="@+id/sunSpinnerL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/sunD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/din"
            />
        <Spinner
            android:id="@+id/sunSpinnerD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"/>

    </LinearLayout>

    <RadioGroup
        android:id="@+id/daysRg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/sourceRg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <RadioButton
            android:id="@+id/radioMon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mondayShort"
            android:checked="true"
            android:layout_marginEnd="4dp"/>

        <RadioButton
            android:id="@+id/radioTue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tuesdayShort"
            android:layout_marginEnd="4dp"/>

        <RadioButton
            android:id="@+id/radioWed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wednesdayShort"
            android:layout_marginEnd="4dp"/>

        <RadioButton
            android:id="@+id/radioThu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/thursdayShort"
            android:layout_marginEnd="4dp"/>

        <RadioButton
            android:id="@+id/radioFri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fridayShort"
            android:layout_marginEnd="4dp"/>

        <RadioButton
            android:id="@+id/radioSat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/saturdayShort"
            android:layout_marginEnd="4dp"/>
        <RadioButton
            android:id="@+id/radioSun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sundayShort"/>

    </RadioGroup>

    <RadioGroup
        android:id="@+id/sourceRg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="8dp">

        <RadioButton
            android:id="@+id/radioApi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/api"
            android:checked="true"
            android:layout_marginEnd="8dp"/>

        <RadioButton
            android:id="@+id/radioDb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/savedMeals"
            android:layout_marginEnd="8dp"/>


    </RadioGroup>

    <LinearLayout
        android:id="@+id/btnsLay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="16dp">

        <Button
            android:id="@+id/prevBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="@string/prev"/>

        <Button
            android:id="@+id/nextBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/next"/>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/loadingPb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"/>


</androidx.constraintlayout.widget.ConstraintLayout>