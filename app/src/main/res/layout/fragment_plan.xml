        <TextView
            android:id="@+id/tueL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lun"
            />
        <Spinner
            android:id="@+id/tueSpinnerL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/mealNameTextView"
            android:layout_marginTop="8dp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tueD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/din"
            />
        <Spinner
            android:id="@+id/tueSpinnerD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/mealNameTextView"
            android:layout_marginTop="8dp"
            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/wedLay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="32dp"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@id/daysRg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnsLay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/wedTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="8dp"

            android:text="@string/wednesday"
            android:textSize="36dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/wedB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/breakf"
            />
        <Spinner
            android:id="@+id/wedSpinnerB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/wedL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lun"
            />
        <Spinner
            android:id="@+id/wedSpinnerL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/wedD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/din"
            />
        <Spinner
            android:id="@+id/wedSpinnerD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/thurLay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="32dp"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@id/daysRg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnsLay"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/thurTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="8dp"

            android:text="@string/thursday"
            android:textSize="36dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/thurB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/breakf"
            />
        <Spinner
            android:id="@+id/thurSpinnerB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/thurL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lun"
            />
        <Spinner
            android:id="@+id/thurSpinnerL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/thurD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/din"
            />
        <Spinner
            android:id="@+id/thurSpinnerD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/friLay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="32dp"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@id/daysRg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnsLay"

        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/friTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="8dp"

            android:text="@string/friday"
            android:textSize="36dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/friB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/breakf"
            />
        <Spinner
            android:id="@+id/friSpinnerB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/friL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lun"
            />
        <Spinner
            android:id="@+id/friSpinnerL"
